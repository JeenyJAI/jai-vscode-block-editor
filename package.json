{
  "name": "block-editor",
  "displayName": "JAI: Block Editor (DSL)",
  "description": "Bridge between AI code generation and your IDE. Execute AI-suggested changes with simple DSL commands (REPLACE, DELETE, INSERT) across multiple files.",
  "version": "0.3.0",
  "publisher": "JeenyJAI",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/JeenyJAI/jai-vscode-block-editor"
  },
  "bugs": {
    "url": "https://github.com/JeenyJAI/jai-vscode-block-editor/issues"
  },
  "homepage": "https://github.com/JeenyJAI/jai-vscode-block-editor#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": ["AI", "Programming Languages", "Snippets", "Machine Learning"],
  "keywords": [
    "ai",
    "ai-assistant", 
    "ai-code",
    "code-generation",
    "copilot",
    "dsl",
    "block-editor",
    "block",
    "edit",
    "replace",
    "delete",
    "insert",
    "refactor",
    "bulk-edit",
    "multi-file",
    "automation"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "blockEditorTerminal.showPanel",
        "title": "Block Editor (DSL)",
        "category": "JAI"
      }
    ],
    "configuration": {
      "title": "Block Editor",
      "properties": {
        "blockEditor.validatePaths": {
          "type": "boolean",
          "default": true,
          "description": "Enable path validation for security"
        },
        "blockEditor.mixedEolPolicy": {
          "type": "string",
          "enum": ["ignore", "skip", "warn", "normalize"],
          "default": "warn",
          "description": "How to handle mixed line endings"
        },
        "blockEditor.enableVerboseLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable verbose logging for debugging"
        },
        "blockEditor.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug mode for webview (shows console logs)"
        },
        "blockEditor.files.respectSearchExclude": {
          "type": "boolean",
          "default": true,
          "description": "Respect user 'files.exclude' and 'search.exclude' settings when resolving files"
        },
        "blockEditor.files.includeDotfiles": {
          "type": "string",
          "enum": ["inherit", "always", "never"],
          "enumDescriptions": [
            "Follow user's exclude settings for dotfiles",
            "Include dotfiles unless explicitly excluded by user",
            "Always exclude dotfiles (add '**/.*' to excludes)"
          ],
          "default": "inherit",
          "description": "How to handle dotfiles (files starting with '.')"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run clean && npm run esbuild -- --production",
    "esbuild": "node esbuild.config.js",
    "clean": "rimraf dist out",
    "watch": "npm run esbuild -- --watch",
    "package": "vsce package",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "precommit": "npm run lint && npm run format:check && npm run type-check"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.2.0"
  }
}